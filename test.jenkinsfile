pipeline {
    agent {
      docker {
        image 'python:3'
        label 'my-build-agent'
      }
    }
    stages{
        stage('Clone repo') {
            steps {
                git (
                    branch: "main",
                    url: "git@github.com:youngcho22/test-sample.git",
                )
            }
        }
        stage('Run unit tests') {
            steps {
                sh "python -m unittest -v test.py"
            }
        }
    }
}